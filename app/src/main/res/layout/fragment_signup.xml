<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.SignupFragment"
    android:background="@color/md_theme_light_primary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="">


        <ImageView
            android:layout_width="407dp"
            android:layout_height="212dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_foreground" />


    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/fragmentSignup_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joinUs"
                android:textColor="@color/seed"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:alpha="0.9"
                android:text="@string/insertCredential"
                android:textColor="@color/md_theme_light_onSecondaryContainer"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0.7"
                android:text="@string/Email_address"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fragmentSignup_editText_emailAddress"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableEnd="@drawable/baseline_alternate_email_24"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.7"
                android:text="@string/name"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fragmentSignup_editText_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableEnd="@drawable/baseline_person_24"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.7"
                android:text="@string/surname"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fragmentSignup_editText_surname"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableEnd="@drawable/baseline_person_24"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.7"
                android:text="@string/password"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fragmentSignup_editText_password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableEnd="@drawable/baseline_remove_red_eye_24"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.7"
                android:text="@string/confirm_password"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fragmentSignup_editText_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableEnd="@drawable/baseline_remove_red_eye_24"
                android:inputType="textPassword" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="@string/signup"
                app:cornerRadius="32dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>