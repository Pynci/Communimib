<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/horizontalRecyclerViewItem_marginTop"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/reportHorizontalRecyclerViewItem_buildingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="@string/category_name" />

    <View
        android:id="@+id/horizontalRecyclerViewItem_marginBottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reportHorizontalRecyclerViewItem_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>