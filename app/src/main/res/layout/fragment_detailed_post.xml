<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detailedPost_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detailedPostItem_commentCreationContainer"
        android:background="?android:selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/postItem_propicCardview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/postItem_propic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_filled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/postItem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/postItem_propicCardview"
                app:layout_constraintTop_toTopOf="@+id/postItem_propicCardview" />

            <TextView
                android:id="@+id/postItem_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/surname"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/postItem_name"
                app:layout_constraintTop_toTopOf="@+id/postItem_name" />

            <TextView
                android:id="@+id/postItem_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/md_theme_dark_onPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/postItem_datetime"
                app:layout_constraintStart_toEndOf="@+id/postItem_propicCardview"
                app:layout_constraintTop_toBottomOf="@+id/postItem_name"
                tools:text="@string/this_is_post_title" />

            <TextView
                android:id="@+id/postItem_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/postItem_datetime"
                app:layout_constraintStart_toStartOf="@+id/postItem_title"
                app:layout_constraintTop_toBottomOf="@+id/postItem_title"
                tools:text="@string/lorem_ipsum" />

            <TextView
                android:id="@+id/postItem_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/md_theme_dark_secondaryContainer"
                app:layout_constraintBottom_toBottomOf="@+id/postItem_surname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/postItem_surname"
                tools:text="18h" />

            <androidx.cardview.widget.CardView
                android:id="@+id/postItem_imageSliderCardView"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:minWidth="300dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="@+id/postItem_description"
                app:layout_constraintStart_toStartOf="@+id/postItem_description"
                app:layout_constraintTop_toBottomOf="@+id/postItem_description"
                app:layout_constraintWidth_max="400dp">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/postItem_imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/postItem_emailIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/postItem_description"
                app:layout_constraintTop_toBottomOf="@+id/postItem_imageSliderCardView"
                app:srcCompat="@drawable/post_email" />

            <ImageView
                android:id="@+id/postItem_linkIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/postItem_description"
                app:layout_constraintTop_toBottomOf="@+id/postItem_emailIcon"
                app:srcCompat="@drawable/post_link" />

            <TextView
                android:id="@+id/postItem_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/md_theme_light_onSecondaryContainer"
                app:layout_constraintBottom_toBottomOf="@+id/postItem_emailIcon"
                app:layout_constraintEnd_toEndOf="@+id/postItem_description"
                app:layout_constraintStart_toEndOf="@+id/postItem_emailIcon"
                app:layout_constraintTop_toTopOf="@+id/postItem_emailIcon"
                tools:text="email@campus.unimib.it" />

            <TextView
                android:id="@+id/postItem_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:autoLink="web"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/md_theme_light_onSecondaryContainer"
                app:layout_constraintBottom_toBottomOf="@+id/postItem_linkIcon"
                app:layout_constraintEnd_toEndOf="@+id/postItem_description"
                app:layout_constraintStart_toEndOf="@+id/postItem_linkIcon"
                app:layout_constraintTop_toTopOf="@+id/postItem_linkIcon"
                tools:text="https://www.unimib.it/" />

            <ImageView
                android:id="@+id/postItem_unimibEmployeeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/postItem_surname"
                app:layout_constraintStart_toEndOf="@+id/postItem_surname"
                app:layout_constraintTop_toTopOf="@+id/postItem_surname"
                app:srcCompat="@drawable/unimib_employee" />

            <ImageView
                android:id="@+id/postItem_commentIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/postItem_description"
                app:layout_constraintTop_toBottomOf="@+id/postItem_linkIcon"
                app:srcCompat="@drawable/comment_icon" />

            <View
                android:id="@+id/divider"
                android:layout_width="409dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postItem_commentIcon" />

            <TextView
                android:id="@+id/postItem_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/postItem_commentIcon"
                app:layout_constraintStart_toEndOf="@+id/postItem_commentIcon"
                app:layout_constraintTop_toTopOf="@+id/postItem_commentIcon" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/comments"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detailedPostItem_commentsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/comments" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailedPostItem_commentCreationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/detailedPostItem_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/detailedPostItem_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:hint="@string/publish_your_comment"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="200"
            android:minHeight="48dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/detailedPostItem_send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/detailedPostItem_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/detailedPostItem_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detailedPostItem_comment"
            app:srcCompat="@drawable/send" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detailedPostItem_floatingActionButton_goUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-16dp"
        android:layout_marginBottom="28dp"
        android:clickable="true"
        android:contentDescription="@string/button_back_to_post"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/detailedPostItem_commentCreationContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/arrow_up" />

</androidx.constraintlayout.widget.ConstraintLayout>